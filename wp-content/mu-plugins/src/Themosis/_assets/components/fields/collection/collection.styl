.themosis-collection-container
  display none
  max-width 100%
  background-color #f3f3f3
  border 1px solid #dddddd
  margin-bottom 1em

.themosis-collection-container.show
  display block

.themosis-collection
  padding 5px

.themosis-collection-list
  margin 0
  padding 0

  &:before
    content ''
    display table

  &:after
    @extend .themosis-collection-list:before
    clear both

  li
    float left
    display block
    margin 0
    padding 10px

.themosis-collection__item
  position relative
  cursor pointer
  box-shadow 0 0 0 1px #fff, 0 0 0 5px #d3d3d3
  width 100px
  height 100px
  background-color #f3f3f3

  &:active
    cursor move

  &.selected
  &:hover
    box-shadow 0 0 0 1px #fff, 0 0 0 5px #1E8CBE

  .check
    display none

  &.selected
    .check
      display block !important
      position absolute
      top -6px
      right -6px
      z-index 25
      width 24px
      height 24px
      outline 0 none
      background #1E8CBE none repeat scroll 0 0
      box-shadow 0 0 0 1px #FFF, 0 0 0 2px #1E8CBE

      div
        height 15px
        width 15px
        margin 5px
        background-position -21px 0

    &:hover
      .check
        div
          @extend .themosis-collection__item.selected .check div

        &:hover
          div
            height 15px
            width 15px
            margin 5px
            background-position -60px 0

  .centered
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    transform translate(50%,50%)
    pointer-events none

  img
    position absolute
    transform translate(-50%,-50%)
    display block
    margin 0 auto

  .filename
    display none
    position absolute
    left 0
    right 0
    bottom 0
    overflow hidden
    max-height 100%
    word-wrap break-word
    text-align center
    font-weight 700
    background rgba(255,255,255,.8)

    &.show
      display block

    div
      padding 0.4em 0.8em

.themosis-collection-ui-state-highlight
  background-color #ddd
  border 3px dashed #aaa
  width 94px
  height 94px
  padding 0

.wp-core-ui
  .themosis-button-remove
    background none repeat scroll 0 0 #bc0b0b
    border-color #a40a0a
    box-shadow 0 1px 0 rgba(230, 13, 13, 1.0) inset, 0 1px 0 rgba(0, 0, 0, 0)
    color #FFF
    text-decoration none
    text-shadow 0 -1px 1px #a40a0a, 1px 0 1px #a40a0a, 0 1px 1px #a40a0a, -1px 0 1px #a40a0a

    &:link
    &:visited
      @extend .wp-core-ui .themosis-button-remove

    &:hover
      background none repeat scroll 0 0 #a40a0a
      border-color #8a0808
      box-shadow 0 1px 0 rgba(204, 12, 12, 1.0) inset, 0 1px 0 rgba(0, 0, 0, 0)
      color #FFF
      text-decoration none

    &:active
      background none repeat scroll 0 0 #930909
      border-color #8a0808
      box-shadow none
      color #FFF
      text-decoration none

#themosis-collection-remove
  display none

  &.show
    display inline-block